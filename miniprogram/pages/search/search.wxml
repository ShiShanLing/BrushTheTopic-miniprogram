<!--pages/search.wxml-->
<view class="container-box">
  <!-- 标题 -->
  <!-- ["OC", "Swift", "Flutter", "CSS", "TS"] -->
  <van-index-bar sticky='false' index-list="{{ indexListStr }}" >
    <view>
      <van-index-anchor use-slot="true" index="搜索"></van-index-anchor>
      <view class="search-box">
        <van-search value="{{ value }}" placeholder="请输入搜索关键词" use-action-slot bind:change="onChange" bind:search="onSearch">
          <view class="search-button" slot="action" bind:tap="onClick">搜索</view>
        </van-search>
      </view>
    </view>
    <view >
      <van-index-anchor  use-slot="true" index="OC">OC</van-index-anchor>
      <ssl-search-list-cell  wx:for="{{dataSourceTemp}}" wx:for-index="index" wx:for-item="cell" bindcustomevent="pageEventListener" 
      topicTitle="{{cell.topicTitle}}" 
      topicAnswer="{{cell.topicAnswer}}"
      learnNum='0'>
      </ssl-search-list-cell>
    </view>
  </van-index-bar>


</view>